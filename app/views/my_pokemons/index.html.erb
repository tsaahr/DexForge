<div class="container mx-auto my-6 px-4">
  <h1 class="mb-6 text-3xl font-semibold text-center text-white">Meus Pokémons</h1>

  <% if @user_pokemons.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @user_pokemons.each do |user_pokemon| %>
        <% pokemon = user_pokemon.pokemon %>
        <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden text-white flex flex-col items-center text-center">
          <img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>" class="w-full h-48 object-contain bg-white p-4">
          <div class="p-4 w-full">
            <h2 class="text-xl font-bold mb-2"><%= pokemon.name.capitalize %></h2>
            <p class="text-sm text-gray-300 mb-1"><strong>Tipo:</strong> <%= pokemon.types.join(", ") %></p>
            <p class="text-sm text-gray-300 mb-1"><strong>Nível:</strong> <%= user_pokemon.level %></p>
            <p class="text-sm text-gray-300"><strong>XP:</strong> <%= user_pokemon.experience %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-white text-center mt-6">You dont have pokemons</p>
  <% end %>
</div>
