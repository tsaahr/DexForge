<div class="container my-5">
  <h1 class="mb-5 text-center display-4 fw-bold text-gradient">My Pokémons</h1>

  <% if @user_pokemons.present? %>
    <div class="row g-4">
      <% @user_pokemons.each do |user_pokemon| %>
        <% pokemon = user_pokemon.pokemon %>
        <% main_type = pokemon.types.first&.name&.downcase || "normal" %>
        <% color = type_color(main_type) %>

        <div class="col-md-6 col-lg-4">
          <a href="#" class="text-decoration-none text-white">
            <div class="card bg-dark bg-opacity-75 border-2 shadow-sm transition-all h-100" style="border-color: <%= color %>; transition: transform 0.2s;">
              <div class="row g-0 h-100 hover-zoom">
                <div class="col-4 d-flex align-items-center p-2">
                  <img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>" class="img-fluid rounded-start">
                </div>
                <div class="col-8">
                  <div class="card-body py-3 d-flex flex-column justify-content-between h-100">
                    <div>
                      <h5 class="card-title fw-bold mb-1" style="color: <%= color %>;">
                        <%= pokemon.name.capitalize %>
                        <% if user_pokemon.nickname.present? %>
                          <small class="text-muted">(<%= user_pokemon.nickname %>)</small>
                        <% end %>
                      </h5>
                      <p class="mb-2">
                        <strong>Type:</strong>
                        <% pokemon.types.each do |type| %>
                          <% type_color_value = type_color(type.name.downcase) %>
                          <span class="badge me-1" style="background-color: <%= type_color_value %>;">
                            <%= type.name.capitalize %>
                          </span>
                        <% end %>
                      </p>
                    </div>

                    <% if user_pokemon.moves.present? %>
                      <div>
                        <p class="mb-1"><strong>Moves:</strong></p>
                        <ul class="list-unstyled mb-0">
                          <% user_pokemon.moves.first(4).each do |move| %>
                            <li class="small"><%= move["name"].humanize %></li>
                          <% end %>
                        </ul>
                        <%= button_to "Select", select_my_pokemon_path(user_pokemon), method: :patch, class: "btn btn-sm btn-outline-light mt-2" unless user_pokemon.selected? %>
                        <% if user_pokemon.selected? %>
                          <span class="badge bg-success mt-2">Selected</span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted mt-5">You don't have any Pokémons yet.</p>
  <% end %>
</div>

<style>
  .text-gradient {
    background: linear-gradient(to right, #facc15, #ef4444, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .card:hover {
    transform: scale(1.02);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    cursor: pointer;
  }

  .hover-zoom {
    transition: transform 0.3s ease-in-out;
  }

  .hover-zoom:hover {
    transform: scale(1.01);
  }
</style>
