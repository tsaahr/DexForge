<div class="container mx-auto my-8 px-4">
  <h1 class="mb-10 text-4xl font-extrabold text-center text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 drop-shadow-lg">
    My Pokémons
  </h1>

  <% if @user_pokemons.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @user_pokemons.each do |user_pokemon| %>
        <% pokemon = user_pokemon.pokemon %>
        <% main_type = pokemon.types.first.downcase %>
        <% color = type_color(main_type) %>

        <div class="bg-white/10 border border-white/20 backdrop-blur-md rounded-xl shadow-md overflow-hidden text-white flex flex-col items-center text-center transition hover:scale-105 hover:shadow-lg"
             style="border-color: <%= color %>;">
          <img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>" class="w-full h-48 object-contain p-4">
          <div class="p-4 w-full">
            <h2 class="text-xl font-bold mb-2" style="color: <%= color %>;">
              <%= pokemon.name.capitalize %>
            </h2>
            <p class="text-sm mb-1">
              <strong>Type:</strong>
              <% pokemon.types.each do |type| %>
                <% type_color_value = type_color(type.downcase) %>
                <span class="font-semibold" style="color: <%= type_color_value %>;">
                  <%= type.capitalize %>
                </span><% unless type == pokemon.types.last %>, <% end %>
              <% end %>
            </p>
            <p class="text-sm text-gray-300 mb-1"><strong>Level:</strong> <%= user_pokemon.level %></p>
            <p class="text-sm text-gray-300"><strong>XP:</strong> <%= user_pokemon.experience %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-white text-center mt-6">You don't have any Pokémons yet.</p>
  <% end %>
</div>
