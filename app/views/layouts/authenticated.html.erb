<!DOCTYPE html>
<html>
  <head>
    <title>DexForge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <style>
      body {
        background-image: url(<%= asset_path("background.jpg") %>);
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: 'Roboto', sans-serif;
        background-repeat: no-repeat;
      }

      .glass-header {
        background: rgba(0, 0, 0, 0.65);
        backdrop-filter: blur(8px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .glass-header a:hover {
        opacity: 0.85;
      }

      .btn-outline-light:hover {
        background-color: white;
        color: #dc3545 !important;
      }

      .btn-light.text-danger:hover {
        background-color: #fff0f0;
      }

      html, body {
        height: 100%;
        margin: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex-grow: 1;
      }

    </style>
  </head>

  <body class="text-dark">
    <% if notice %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <header class="glass-header py-3 mb-4">
      <div class="container d-flex justify-content-between align-items-center">
        <%= link_to "DexForge", root_path, class: "fs-3 fw-bold text-white text-decoration-none" %>
        <nav class="d-flex gap-3">
          <%= link_to "Center Pokemon", healing_center_path, class: "btn btn-light text-danger fw-semibold" %>
          <%= link_to "My Pokémons", my_pokemons_path, class: "btn btn-light text-danger fw-semibold" %>
          <%= link_to "Capture", capture_path, class: "btn btn-light text-danger fw-semibold" %>
          <%= link_to "Battle", "#", class: "btn btn-light text-danger fw-semibold" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
        </nav>
      </div>
    </header>

    <main class="container mb-5" style="flex-grow:1;">
      <%= yield %>
    </main>

    <footer class="text-center text-muted py-3 border-top bg-white bg-opacity-75">
      <small>DexForge © <%= Time.current.year %></small>
    </footer>
  </body>
</html>