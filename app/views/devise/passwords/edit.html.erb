<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg border-0 rounded-4 bg-dark bg-opacity-75 text-white" style="width: 100%; max-width: 500px;">
    <div class="card-body p-4">
      <h2 class="text-center mb-4 fw-bold">Reset your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-3">
          <%= f.label :password, "New Password", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-light text-dark" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light text-dark" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Change my password", class: "btn btn-danger fw-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
