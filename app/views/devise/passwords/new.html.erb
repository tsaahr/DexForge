<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg border-0 rounded-4 bg-dark bg-opacity-75 text-white" style="width: 100%; max-width: 500px;">
    <div class="card-body p-4">
      <h2 class="text-center mb-4 fw-bold">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-light text-dark" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Send me reset instructions", class: "btn btn-danger fw-bold" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to "Back to login", new_session_path(resource_name), class: "text-light text-decoration-underline small" %>
      </div>
    </div>
  </div>
</div>
