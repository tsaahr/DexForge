<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg border-0 rounded-4 bg-dark bg-opacity-75 text-white" style="width: 100%; max-width: 460px;">
    <div class="card-body p-4">
      <h2 class="text-center mb-4 fw-bold">Create Account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control bg-light text-dark" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Password", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-light text-dark" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light text-dark" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Sign Up", class: "btn btn-danger fw-bold" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-white text-decoration-underline" %>
      </div>
    </div>
  </div>
</div>
